<h1>Top 5 States by Population</h1>


<table class = "table">
	<tr>
		<th>State</th>
		<th>Capital</th>
		<th>Population</th>
		<th>Area</th>
	</tr>
		<% @toppop.each do |state| 	%>
		<tr>
			<td><%= state.name %></td>
			<td><%= state.capital %></td>
			<td><%= state.population %></td>
			<td><%= state.area %></td>
		</tr>
		<% end %>
</table>

<p><%= link_to "All States", root_path %></p>
<p><%= link_to "Top 5 by Area", area_path %></p>